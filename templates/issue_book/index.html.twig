{% extends 'base.html.twig' %}

{% block title %}IssueBook index{% endblock %}

{% block body %}
    <h1>IssueBook index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IssueDate</th>
                <th>ReturnDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for issue_book in issue_books %}
            <tr>
                <td>{{ issue_book.id }}</td>
                <td>{{ issue_book.issueDate ? issue_book.issueDate|date('Y-m-d') : '' }}</td>
                <td>{{ issue_book.returnDate ? issue_book.returnDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_issue_book_show', {'id': issue_book.id}) }}">show</a>
                    <a href="{{ path('app_issue_book_edit', {'id': issue_book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_issue_book_new') }}">Create new</a>
{% endblock %}
